<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".view.toDoList.ToDoListActivity">

    <TextView
        android:id="@+id/text_view_task_title"
        style="@style/RobotoCondensedBold.16spWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginTop="@dimen/size_8"
        android:text="@string/task_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_task_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginTop="@dimen/size_4"
        android:layout_marginEnd="@dimen/size_8"
        android:backgroundTint="@color/grey"
        android:cursorVisible="true"
        android:inputType="text"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_12"
        app:layout_constraintBottom_toTopOf="@id/text_view_task_description"
        app:layout_constraintStart_toStartOf="@+id/text_view_task_title"
        app:layout_constraintTop_toBottomOf="@id/text_view_task_title" />

    <TextView
        android:id="@+id/text_view_task_description"
        style="@style/RobotoCondensedBold.16spWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_18"
        android:text="@string/task_description"
        app:layout_constraintStart_toStartOf="@+id/text_view_task_title"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_task_title" />

    <EditText
        android:id="@+id/edit_text_task_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginTop="@dimen/size_4"
        android:layout_marginEnd="@dimen/size_8"
        android:backgroundTint="@color/grey"
        android:cursorVisible="true"
        android:inputType="text"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_12"
        app:layout_constraintEnd_toEndOf="@id/text_view_task_description"
        app:layout_constraintStart_toStartOf="@id/text_view_task_description"
        app:layout_constraintTop_toBottomOf="@id/text_view_task_description" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_button_to_do_item"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_18"
        android:layout_marginBottom="@dimen/size_16"
        android:backgroundTint="@color/grey"
        android:clickable="true"
        app:backgroundTint="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />


</androidx.constraintlayout.widget.ConstraintLayout>